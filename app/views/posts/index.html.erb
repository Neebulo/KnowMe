render <%= 'break_top' %>
<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<div class="container">
    <!-- Example row of columns -->
  <div class="row">
    <% @posts.each do |x| %>
    <div class="col-md-4">
      <h2><%= link_to "#{x.title}", post_path(x) %></h2>
      <p><%= x.body %></p>
      <p class="btn btn-default"><%= link_to "view me", post_path(x) %></p>
    </div>
    <% end %>
  </div>
</div>
<%= link_to(" Create New Post",  post_new_path)%>
  <hr>
  <% if current_user %>
    <p>Hello, <%= current_user.email %></p>
    <%= link_to 'Logout', session_path(session), method: :delete%>
  <%else%>
  <%end%> <!-- end for if -->
