<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<div class="page-header">
  <h1><%= @post.title %>
    <%= link_to("Edit this post", edit_post_path)%>
    <br>
    <br><small><%= @post.body %></small>
  </h1>
</div>
<ul class="list-group">
  <li class="list-group-item">
    <% @post.comments.each do |c| %>
      <span class="badge">
        <%if c.user %>
          Created by: <%= c.user.name %>
        <%else%>
          Created by: Anonymous
        <%end%>   <!-- end for if -->
      </span>
      <p><%= c.body %></p>
  <%= link_to 'Delete this comment!', [@post,c], method: :delete, data: {confirm: "Are you sure you want to remove this comment?"} %>

    <% end %> <!-- end for @post.comments.each -->
  </li>
</ul>

 <div>
   <%= form_for [@post, Comment.new] do |f| %>
     <%= f.label :body, "New Comment" %>
     <%= f.text_area :body %>
     <%= f.submit "Submit Comment" %>
   <% end %>
 </div>
 <%= link_to(" Back to the list of posts", posts_path)%>
 <br>
